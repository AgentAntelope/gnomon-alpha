<h1>
  <% @hipku.each do |line| %>
    <p><%= line.gsub(/\A./) {|m| m.upcase} %></p>
  <% end %>
</h1>

<% rand(800).times do %>
  <% newline = rand > 0.95 %>
  <% if newline %>
    <p
    class = <%= %w[left right].sample %>
    >
  <% end %>
    <% word = generate_word %>
    <%= (link_to word, next_action, class: "glitch #{glitch_class}", data: {text: word}) %>
  <% if newline %>
    </p>
  <% end %>
<% end %>

<% if @variant == 4 %>
  <form action="/" method="get">
    <p>
      &nbsp;
    <p/>
    <label class='ask'>
      ASK : <%= text_area_tag('ASK') %>
    </label>
    <label class='tell'>
      TELL: <%= text_area_tag('TELL') %>
    </label>
    <div class='buttonholder'>
      <button>
        INPUT
      </button>
    </div>
  </form>
<% end %>
